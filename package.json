{
  "name": "object-builder",
  "version": "0.1.0",
  "description": "Object Builder - Editor de objetos graficos para OpenTibia",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "pack": "electron-vite build && electron-builder --dir",
    "dist": "electron-vite build && electron-builder",
    "dist:win": "electron-vite build && electron-builder --win",
    "dist:mac": "electron-vite build && electron-builder --mac",
    "dist:linux": "electron-vite build && electron-builder --linux"
  },
  "keywords": [
    "opentibia",
    "object-builder",
    "sprite-editor"
  ],
  "author": "Calango Studios",
  "license": "MIT",
  "build": {
    "appId": "com.mignari.ObjectBuilder",
    "productName": "Object Builder",
    "copyright": "Copyright (c) 2014-2026 Contributors",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "valerioleite",
      "repo": "electron-object-builder"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "fileAssociations": [
      {
        "ext": "dat",
        "name": "Metadata File",
        "role": "Editor",
        "icon": "build/file-icons/file_icon_dat48.png"
      },
      {
        "ext": "spr",
        "name": "Sprites File",
        "role": "Editor",
        "icon": "build/file-icons/file_icon_spr48.png"
      },
      {
        "ext": "obd",
        "name": "Object Builder File",
        "role": "Editor",
        "icon": "build/file-icons/file_icon_obd48.png"
      }
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@tailwindcss/vite": "^4.2.1",
    "electron-updater": "^6.8.3",
    "i18next": "^25.8.13",
    "lzma": "^2.3.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^16.5.4",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.2.1",
    "zustand": "^5.0.11"
  }
}
